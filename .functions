}

#Check Remote Repos

function rpscheck() {
	white=$(tput setaf 7)
	yellow=$(tput setaf 3)
	for d in $(find $dirProjects -name "*.git" -type d -maxdepth 2) do
	  cd $d/..
	  printf "${yellow}${PWD##*/}${white}\n"
	  git fetch origin --dry-run
	done
}