#Open Project
function propn() {
	if [[ -n "$1" ]]
		then
			if [ "$1" == "-s" ]
				then
					if [[ -n "$2" ]]
						then
							cd $dirProjects/$2
							open -a "Sublime Text" $2.sublime-project
						else
							cd $dirProjects
					fi
				else
					cd $dirProjects/$1
					if [ "$2" == "-s" ]
						then
							open -a "Sublime Text" $1.sublime-project
					fi
			fi
		else
			cd $dirProjects
	fi
}

#Setup Web Project
function prstp() {
	if [[ -n "$1" ]]
		then
			remoteFlag=false
			if [ "$1" == "-r" ]
				then
					remoteFlag=true
					if [[ -n "$2" ]]
						then
							projectName=$2
						else
							echo "Please Enter Project Name"
							exit
					fi
				else
					projectName=$1
					if [ "$2" == "-r" ]
						then
							remoteFlag=true
					fi
			fi
			echo "Setting Up Project $projectName"
			propn
			if [[ ! -d $projectName ]]
				then
					mkdir $projectName
			fi
			if $remoteFlag
				then
					git clone $remoteProjectWeb $projectName
					cd $projectName
					rm -rf .git
					rm -rf meta
					rm *.md
					mv TemplateX.sublime-project $projectName.sublime-project
				else
					cd $projectName
					cp -R $dirProjectWeb/dev .
					cp $dirProjectWeb/gruntfile.js $dirProjectWeb/.*rc $dirProjectWeb/package.json .
					cp $dirProjectWeb/TemplateX.sublime-project ./$projectName.sublime-project
			fi
			mkdir ./meta ./design ./sources
			find . -name ".DS_Store" -type f -delete
			find ./dev -type d -empty -delete
			perl -pi -w -e "s/TemplateX/"$projectName"/g;" ./gruntfile.js
			perl -pi -w -e "s/TemplateX/"$projectName"/g;" ./$projectName.sublime-project
			while true; do
				read -p "Do You Want to Install npm Dependencies (y/n)? " ynnpm
				case $ynnpm in
						[Yy]*)
							npm install
							break
							;;
						[Nn]*)
							break
							;;
						*)
							echo "Please Answer (y)es or (n)o"
							;;
				esac
			done
			OPTIND=1
		else
			echo "Please Enter Project Name"
	fi
}

