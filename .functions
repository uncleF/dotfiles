#Open Project

function propn() {
	if [[ -n "$1" ]]
		then
			if [ "$1" == "-s" ]
				then
					if [[ -n "$2" ]]
						then
							cd $dirProjects/$2
							open -a "Sublime Text" $2.sublime-project
						else
							cd $dirProjects
					fi
				else
					cd $dirProjects/$1
					if [ "$2" == "-s" ]
						then
							open -a "Sublime Text" $1.sublime-project
					fi
			fi
		else
			cd $dirProjects
	fi
}

