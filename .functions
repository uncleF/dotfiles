#Setup App Project
function apstp() {
	if [[ -n "$1" ]]
		then
			remoteFlag=false
			if [ "$1" == "-r" ]
				then
					remoteFlag=true
					if [[ -n "$2" ]]
						then
							projectName=$2
							packageName=$3
						else
							echo "Please Enter Project Name"
							exit
					fi
				else
					projectName=$1
					if [[ -n "$2" ]]
						then
							if [ "$2" == "-r" ]
								then
									remoteFlag=true
								else
									packageName=$2
									if [ "$3" == "-r" ]
										then
											remoteFlag=true
									fi
							fi
					fi
			fi
