			mkdir ./meta ./design ./sources
			find . -name ".DS_Store" -type f -delete
			find ./dev -type d -empty -delete
			perl -pi -w -e "s/AppX/"$projectName"/g;" ./gruntfile.js
			perl -pi -w -e "s/AppX/"$projectName"/g;" ./$projectName.sublime-project
